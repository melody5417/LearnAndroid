<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".widgetdemo.TextViewActivity">

    <TextView
            android:id="@+id/txtOne4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:scrollHorizontally="true"
            android:focusableInTouchMode="true"
            android:text="你整天说着日了狗日了狗，但是你却没有来，呵呵呵呵呵呵呵呵呵呵~"/>

    <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/hello" />

    <TextView
            android:id="@+id/txtOne"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:text="TextView(显示框)\n测试"
            android:textColor="#EA5246"
            android:textStyle="bold|italic"
            android:background="#000000"
            android:scaleX="2.3"
            android:lineSpacingExtra="5dp"
            android:textSize="18sp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="#F9F900"
            android:shadowDx="-20.0"
            android:shadowDy="10.0"
            android:shadowRadius="13.0"
            android:text="带阴影的TextView"
            android:textColor="#4A4AFF"
            android:textSize="30sp" />

    <TextView
            android:id="@+id/txtOne1"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/rectborder"
            android:text="矩形边框的TextView" />

    <TextView
            android:id="@+id/txtTwo2"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/radiuborder"
            android:text="圆角边框的TextView" />

    <TextView
            android:id="@+id/txtZQD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_188FFF"
            android:drawableTop="@drawable/show1"
            android:drawableLeft="@drawable/show2"
            android:drawableRight="@drawable/show3"
            android:drawableBottom="@drawable/show4"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:paddingLeft="100dp"
            android:paddingRight="200dp"
            android:text="张全蛋" />

    <TextView
            android:id="@+id/text_view_link"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/baidu"
            android:autoLink="all"/>

    <TextView
            android:id="@+id/text_view_html"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

</LinearLayout>